<org.getlantern.firetweet.view.MainFrameLayout
    android:id="@+id/home_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.getlantern.firetweet.view.ExtendedViewPager
        android:id="@+id/main_pager"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include layout="@layout/layout_empty_tab_hint"/>

    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.getlantern.firetweet.view.FiretweetToolbar
            android:id="@+id/actionbar"
            style="?actionBarStyle"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp">

            <org.getlantern.firetweet.view.TabPagerIndicator
                android:id="@+id/main_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:tabExpandEnabled="true"
                app:tabHorizontalPadding="@dimen/element_spacing_normal"/>

        </org.getlantern.firetweet.view.FiretweetToolbar>

        <View
            android:id="@+id/actionbar_overlay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <include layout="@layout/layout_home_actions_button"/>
</org.getlantern.firetweet.view.MainFrameLayout>
