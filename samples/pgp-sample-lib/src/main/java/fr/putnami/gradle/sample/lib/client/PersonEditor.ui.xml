<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	>
	
	<g:HTMLPanel>
		<fieldset>
			<legend>Person form</legend>
			<div>
				<label>Name</label>
				<g:TextBox ui:field="name" />
			</div>
			<div>
				<label>Password</label>
				<g:PasswordTextBox ui:field="email" />
			</div>
		</fieldset>
  </g:HTMLPanel>
</ui:UiBinder>